{
  "publisher": "jackiotyu",
  "name": "size-tree",
  "displayName": "Size Tree",
  "description": "Quick show file size and delete files by one click.",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackiotyu/size-tree.git"
  },
  "bugs": {
    "url": "https://github.com/jackiotyu/size-tree/issues"
  },
  "keywords": [
    "file size tree",
    "delete files"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "size-tree.refresh",
        "title": "Refresh size tree",
        "icon": "$(refresh)"
      },
      {
        "command": "size-tree.sortByName",
        "title": "Sort by name",
        "icon": "$(case-sensitive)"
      },
      {
        "command": "size-tree.sortBySize",
        "title": "Sort by size",
        "icon": "$(file)"
      },
      {
        "command": "size-tree.descend",
        "title": "Descend",
        "icon": "$(arrow-down)"
      },
      {
        "command": "size-tree.ascend",
        "title": "Ascend",
        "icon": "$(arrow-up)"
      },
      {
        "command": "size-tree.groupByType",
        "title": "Group by file type",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "size-tree.ungroupByType",
        "title": "Ungroup by file type",
        "icon": "$(ungroup-by-ref-type)"
      },
      {
        "command": "size-tree.deleteSelected",
        "title": "Delete selected files/dirs"
      },
      {
        "command": "size-tree.deleteGroupFiles",
        "title": "Delete files in current group"
      },
      {
        "command": "size-tree.revealInExplorer",
        "title": "Reveal in explorer"
      },
      {
        "command": "size-tree.openSetting",
        "title": "Open size-tree setting",
        "icon": "$(settings-gear)"
      },
      {
        "command": "size-tree.searchInFolder",
        "title": "ðŸ“¦ List folder's files in size-tree",
        "icon": "$(circle-large)"
      },
      {
        "command": "size-tree.clearSearchFolder",
        "title": "Clear Current Search Folder",
        "icon": "$(circle-slash)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "sizeTree",
          "name": "size tree"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "size-tree.refresh",
          "when": "false"
        },
        {
          "command": "size-tree.sortByName",
          "when": "false"
        },
        {
          "command": "size-tree.sortBySize",
          "when": "false"
        },
        {
          "command": "size-tree.descend",
          "when": "false"
        },
        {
          "command": "size-tree.ascend",
          "when": "false"
        },
        {
          "command": "size-tree.groupByType",
          "when": "false"
        },
        {
          "command": "size-tree.ungroupByType",
          "when": "false"
        },
        {
          "command": "size-tree.deleteSelected",
          "when": "false"
        },
        {
          "command": "size-tree.revealInExplorer",
          "when": "false"
        },
        {
          "command": "size-tree.searchInFolder",
          "when": "false"
        },
        {
          "command": "size-tree.clearSearchFolder",
          "when": "false"
        },
        {
          "command": "size-tree.deleteGroupFiles",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "size-tree.openSetting",
          "when": "view == sizeTree",
          "group": "navigation@100"
        },
        {
          "command": "size-tree.clearSearchFolder",
          "when": "view == sizeTree && sizeTree.searchFolder",
          "group": "navigation@99"
        },
        {
          "command": "size-tree.refresh",
          "when": "view == sizeTree",
          "group": "navigation@4"
        },
        {
          "command": "size-tree.descend",
          "when": "view == sizeTree && !sizeTree.asc",
          "group": "navigation@3"
        },
        {
          "command": "size-tree.ascend",
          "when": "view == sizeTree && sizeTree.asc",
          "group": "navigation@3"
        },
        {
          "command": "size-tree.sortBySize",
          "when": "view == sizeTree && sizeTree.sortKey === 'size'",
          "group": "navigation@2"
        },
        {
          "command": "size-tree.sortByName",
          "when": "view == sizeTree && sizeTree.sortKey === 'filename'",
          "group": "navigation@2"
        },
        {
          "command": "size-tree.ungroupByType",
          "when": "view == sizeTree && sizeTree.group === false",
          "group": "navigation@1"
        },
        {
          "command": "size-tree.groupByType",
          "when": "view == sizeTree && sizeTree.group === true",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "size-tree.deleteSelected",
          "when": "view == sizeTree && viewItem == sizeTree.fileItem"
        },
        {
          "command": "size-tree.revealInExplorer",
          "when": "view == sizeTree && viewItem == sizeTree.fileItem"
        },
        {
          "command": "size-tree.deleteGroupFiles",
          "when": "view == sizeTree && viewItem == sizeTree.fileGroup"
        }
      ],
      "explorer/context": [
        {
          "command": "size-tree.searchInFolder",
          "group": "4_search@99",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "configuration of size-tree",
      "properties": {
        "sizeTree.useExcludeDefault": {
          "type": "boolean",
          "description": "default exclude from `files.exclude` & `search.exclude`",
          "scope": "resource",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "util-kit": "^0.1.4"
  }
}
